SM980 = 980px
SM720 = 720px
SM480 = 480px
SM375 = 375px
SM360 = 360px
SM320 = 320px

@media screen and (max-width: SM980)
	
	.mobile-page--menu
		display block
	
	.left-sidebar
		display none

@media screen and (max-width: SM720)

	html
		margin-right 0 !important

	body
		padding-bottom 0 !important
	
	.mobile-none
		display none !important
	
	.custom-popup
		position fixed
		overflow-y scroll
	
	.drop--menu-user
		top 100%
		display none
		brr(0)
		&.is-active
			display block
	
	.form--search-help input
		padding-right 48px
	
	.header
		border-bottom: 1px solid #313031
	
	.top-line
		margin-bottom 0
	
	.footer
		display none
	
	.black-main
		margin 0
		background: #161516
		padding 24px
		border 0
		brr(0)
		.main-container
			margin-left 0
	
	.label-payment--fill .icon-many
		top 16px

	.heading--main-container
		margin: 5px 0 20px
		.black-main--head
			font-size 27px
			ls(-0.21px)
	.credit-card--drop
		brr(6px)
		.arrow-default
			top 86px
			right 28px
		.head--credit-card
			padding 26px 24px
			border-radius: 6px 6px 0 0
			text-decoration none
			&.close-status
				brr(6px)
			.credit-card--name
				margin-bottom 30px
		.main--credit-card
			padding 0
			background-color transparent
			.credit-card--mobile-wrapper
				padding: 32px 24px 2px
				background: cBlackD
				border-radius: 0 0 6px 6px
				margin-bottom 24px
	
	.credit-card--edit
		padding 32px 24px
	
	.black-main
		display block
	
	.text--select-price
		brr(4px)
	
	.table-history--wrapper
		width: calc(100% + 48px)
		overflow-x: scroll
		position: relative
		left: -24px
		padding-left: 24px
		.table-history
			width 624px
	
	.main--credit-card .form-withdraw--desc
		br
			display none
	
	.account-info--black
		padding 20px 24px
		brr(6px)
		.account-wrap--button
			margin-top 27px
			margin-bottom 12px
	
	.account-info--black
		.my-information
			padding 8px 0
	
	.mobile--marketing-preferences
		display block
	
	.account-info--black.small-offset
		position relative
		padding 24px 16px
		.checked--name
			padding-right 60px
		.my-info--change
			position absolute
			right 24px
			top 24px
			min-width 40px
	
	.mobile-back
		display block
	
	// Popup
	
	.mobile-body
		overflow hidden
	.mfp-wrap
		top 0 !important
		position fixed !important
		overflow auto
	.mfp-bg
		position fixed !important
		height 100% !important
	.mfp-container
		position fixed !important
		top 0 !important
		padding 0
	.mfp-content
		height 100%
	.custom-close,
	.mfp-close
		top 26px !important
		right 26px !important
	
	.popup-default
		max-width 100%
		height 100%
		margin 0 auto
		brr(0)
		overflow-y scroll
		&.default-offset
			padding: 70px 24px 52px
	
	.popup-reciept
		.heading-default
			margin-bottom 6px
			text-align center
	
	.message-status
		display flex
		flex-direction column
		align-items center
		justify-content center
		.wrap--send-button
			position absolute
			width 100%
			bottom 24px
			display flex
			padding 0 24px
	
	.popup-default
		.heading-default
			line-height 34px
			br
				display none
	
	// Terms
	
	.black-main--big
		margin 0
		background: #161516
		padding: 40px 24px 14px
	
	.terms-content
		.mobile-offset--terms
			display block
		h1
			font-size 27px
			margin-bottom 26px
		h4
			font-size 18px
		h6
			font-size 14px
		p,
		a,
		ul li
			font-size 14px
	
	.item--input-label label
		c cWhite
	
	.wraps-mobile--bottom
		position absolute
		bottom 36px
		left 0
		width 100%
	
	.black-main--default
		margin 0
		padding 38px 24px 24px
		background: #161516
		border 0
		brr(0)
		.black-main--head
			font-size 27px
			line-height 32px
	
	.help-page
		.height-50
			height 36px
		.form--search-help
			margin-bottom 20px
	
	.wrapper--category
		margin 0 -4px
		.category-item
			margin 4px
			width: calc(25% - 8px)
	
	.login-problems
		padding-left 0
		.height-50
			height 26px
		.result-def--item
			padding 26px 24px
	.login-problems--post
		p
			font-size 14px
			line-height 22px
	
	.black-main--head
		font-size 27px
		line-height 32px
	.result-def--item
		padding 30px 24px
	
	.payment--gender-mobile
		width 196px
		height 48px
		.text--select-price
			height 44px
			padding: 14px 10px
	
	.mobile--no-margin
		margin-bottom 0
	.gender-mobile
		padding-top 8px
	
	.popup-default
		.button
			width 100%
	
	.message-status
		padding 90px 24px !important
	
	.message-verification
		min-width 100%
	
	.marketing-preferences
		.account-info--black
			padding 26px 24px 20px
	
	.account-document
		.account-info--black.small-offset .my-info--change
			right 16px
	
	.tiket-main--item
		padding: 30px 24px 20px
		.tiket-item--head .new-tiket
			right 8px
		.tiket-item--content
			padding-top 22px
	
	.new-ticket--fixed
		display block
	.contact-tickets.new-tickets
		padding-bottom 96px
		.button-tiket
			display none
	
	.top-line--tiket
		.button-close
			display none
	
	.contact-tickets
		.link-back span
			display none
		.tickets-chat
			padding: 24px 24px 20px
			.file-message
				.file-load
					width 100%
					margin-right 0
					&:not(:last-child)
						margin-bottom 8px
	.reply-wrapper 
		.reply-message--send
			.reply-message__content
				padding: 14px 16px 0
				.upload-file--send
					.upload-file.is-message
						width 100%
				textarea
					min-height 133px
	
	.heading-step
		display flex
		flex-direction row
		justify-content space-between
		align-items flex-end
		.step-count
			padding-bottom 4px

@media screen and (max-width: 540px)
	
	.wrapper--category
		justify-content center
		.category-item
			width: calc(50% - 8px)

	.filter-button--wrapper
		display none
	
	.mobile-filter
		display block
	
	.custom-popup
		&.open_window
			.popup-default
				top 0
				transform translate(-50%, 0) scale(1)
		.popup-default
			min-height 600px
			&.mobile-popup--style
				padding 70px 24px 24px
				brr(0)
				height 100%
				.mobile-head
					margin-bottom 44px

	.filter-hidden--mobile
		border-radius: 6px
		background-color: #242324
		.filter-date.datapicker
			background: #353435
		.filter-hidden--items
			padding: 20px 24px
			&:not(:last-child)
				border-bottom 1px solid #313031
			&:last-child
				padding: 20px 24px 32px
	.filter-hidden--items.filter-buttons--mobile
		padding 24px 0
	.filter-buttons
		padding 0
		justify-content center
		.send-button
			width 100%
	.reset.reset-mobile
		position absolute
		width 100%
		text-align center
		bottom 20px
		left 0
		margin-right 0

@media screen and (max-width: SM480)
	.mobile-page--menu li:not(:last-child)
		margin-right 25px

@media screen and (max-width: SM375)
	.mobile-page--menu li:not(:last-child)
		margin-right 20px

@media screen and (max-width: SM320)
	.mobile-page--menu li a
		font-size 12px
	
	.my-info--head .my-info--head-name p .desc
		padding-left 0
		display block