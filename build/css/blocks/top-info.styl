.top-info
	@media screen and (max-width: 720px)
		display none

.top-info--wrapper
	display flex
	flex-direction row
	justify-content space-between
	min-height 64px
	background: cBlackD
	padding 0 24px
	brr(10px)
	@media screen and (max-width: 1320px)
		padding 0 20px
	@media screen and (max-width: 730px)
		padding 0 18px
	
	.settings-head
		display none
		padding-left 24px
		border-left 1px solid cGrayD
		@media screen and (max-width: 1024px)
			display block
		@media screen and (max-width: 850px)
			display none
		&--menu
			li
				a
					position relative
					display inline-block
					height 64px
					line-height 64px
					font-size 14px
					ffa(fSB)
					ls(-0.1px)
					c cGrayL
					text-decoration none
					trn(.25s)
	
	.top-info__left
		display flex
		flex-direction row
		align-items stretch
		flex-grow 1
	
	.top-info__right
		display flex
		flex-direction row
		border-left 1px solid cGrayD
		align-items center
		padding-left 30px
		@media screen and (max-width: 1240px)
			padding-left 20px
		@media screen and (max-width: 1024px)
			display none
		
		.top-info--items
			position relative
			display flex
			flex-direction row
			align-items center
			min-height 64px
			padding 0 20px
			@media screen and (max-width: 1240px)
				padding 0 14px
			&.info-time,
			&.info-date
				@media screen and (max-width: 1190px)
					display none
			&:first-child
				padding-left 0
			&:last-child
				padding-right 0
			&:nth-child(2)
				@media screen and (max-width: 1170px)
					padding-right 0
				&:before
					@media screen and (max-width: 1190px)
						display none
			&:not(:last-child)
				&:before
					position absolute
					top 50%
					right 0
					content ""
					display block
					background: cGrayD
					width 1px
					height 24px
					tt(0, -50%)
			& > span
				margin-right 8px
			span,
			.date-head
				display inline-block
				font-size 12px
				ffa(fR)
				ls(-0.09px)
				c cGray
			.time-head
				font-size 12px
				ffa(fR)
				color cWhite
				ls(-0.09px)
				margin-right 8px

.head-search
	&__search
		display flex
		flex-direction row
		align-items center
		padding-right 24px
		border-right 1px solid cGrayD
		@media screen and (max-width: 1320px)
			padding-right 20px
		@media screen and (max-width: 730px)
			padding-right 18px
		&.no-border
			border-right 1px solid transparent
		.search-link
			position relative
			width 16px
			height 16px
			display block
			margin-top 2px
			
			&.is-active
				svg
					opacity 0
					visibility hidden
				
				.closed--search-form
					opacity 1
					visibility visible

			svg
				position absolute
				opacity 1
				visibility visible
				fill cGray
				trn(.25s)
			&:hover svg
				fill cWhite
				
			.closed--search-form
				position absolute
				top 50%
				display block
				width 16px
				height 16px
				opacity 0
				visibility hidden
				tt(0, -50%)
				&:hover
					span
						background: cWhite
				span
					position absolute
					top 6px
					display block
					width 16px
					height 2px
					background: cGray
					trn(.25s)
					&:nth-child(1)
						transform rotateZ(45deg)
					&:nth-child(2)
						transform rotateZ(-45deg)

.head-search__menu
	position relative
	display flex
	flex-grow 1
	padding-left 30px
	align-items center
	@media screen and (max-width: 1320px)
		padding-left 20px
	
	.menu--top-info
		li
			display inline-block
			&:not(:last-child)
				margin-right 30px
				@media screen and (max-width: 1360px)
					margin-right 20px
				@media screen and (max-width: 1270px)
					margin-right 16px
				@media screen and (max-width: 1170px)
					margin-right 20px
				@media screen and (max-width: 768px)
					margin-right 15px
			&:hover a
				c cWhite
			&.is-active
				a
					c cWhite
					&:before
						position absolute
						bottom 0
						left 0
						content ""
						display block
						width 100%
						height 3px
						background: cYellow
					
			a
				position relative
				display inline-block
				height 64px
				line-height 64px
				font-size 14px
				ffa(fSB)
				ls(-0.1px)
				c cGrayL
				text-decoration none
				trn(.25s)
	
	.search-form--head
		position absolute
		left 0
		min-width 210px
		height 64px
		background: cBlackD
		z-index 1
		padding-right 8px
		opacity 0
		visibility hidden
		trn(.2s)
		
		&.is-active
			min-width: calc(100%)
			opacity 1
			visibility visible
		
		.search-form__wrapper
			position relative
			display flex
			align-items center
			height 64px
		
		.search-input
			position relative
			width 100%
			height 48px
			z-index 10
			brr(6px)
			background: cGraySearch
			font-size 14px
			ffa(fR)
			ls(-0.1px)
			c cWhite
			padding-left 48px
			padding-right 20px
			
		button,
		span
			position absolute
			z-index 10
		
		.search-submit
			top calc(50% + 2px)
			left 16px
			tt(0, -50%)
			svg
				fill cGray
				trn(.25s)
				&:hover
					fill cWhite
		
		.cancel
			right 16px
			top 50%
			padding-top 4px
			tt(0, -50%)
			cursor pointer
			opacity 0
			visibility hidden
			trn(.25s)
			&:hover
				svg
					fill cWhite
			&.show-cancel
				opacity 1
				visibility visible
			svg
				fill cGray
				trn(.25s)