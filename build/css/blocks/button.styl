.button
	display inline-block
	min-width 74px
	height 32px
	padding-top 7px
	padding-bottom 7px
	text-align center
	c cWhite
	ffa(fSB)
	font-size 14px
	ls(-0.1px)
	text-decoration none
	cursor pointer
	background: cBlackD
	border-radius 6px
	trn(.25s)
	&:hover
		background: cGraySearch
	&.gray-color
		background: cGrayL
		&:hover
			background: #ccc

.popup-button
	width 100%
	height 56px
	font-size 16px
	line-height 40px
	background: cYellow
	c cBlackL
	&:hover
		background cYellowL
		c cBlackL
	&.attach-file
		position relative
		background: cGrayL
		&:hover
			background: #ccc
		.pluss-icon
			position absolute
			left 24px
			top 22px

.item--input-label
	.popup-button.attach-file
		background: cGrayL
		&:hover
			background: #ccc

.send-button
	height 56px
	font-size 16px
	c cBlackL
	padding 20px 32px
	background: cYellow
	&:hover
		background: cYellowL
		c cBlackL

.button-gray
	min-width auto
	padding-top 8px
	padding-left 11px
	padding-right 11px
	background: cGrayL
	c cBlackL
	&:hover
		background: #ccc
		c cBlackL

.button-black
	min-width auto
	padding-left 11px
	padding-right 11px
	background: cBlackL
	c cGrayL
	&:hover
		background: cBlackL
		c cWhite

.filter-button
	background: cGrayL
	c cBlackL
	padding 16px 24px 15px
	height auto
	&:hover
		background: #ccc
		c cBlackL
	.filter-button__count
		margin-left 10px
		background: cBlackL
		display inline-block
		min-width 16px
		height 16px
		line-height 16px
		font-size 11px
		c cGrayL
		brr(6px)

.cancel-button
	min-width 146px
	height 56px
	font-size 16px
	padding 20px 20px
	background: cYellow
	c cBlackL
	&:hover
		background cYellowL
		c #161516

// Small Button

.small-button
	height 24px
	padding 5px
	font-size 11px
	&.button-rejected
		c #ff3b30
		background: #3a1f1e
	&.button-verified
		c cBlackL
		background: cYellow
	&.button-pending
		background: cBlackL
		c cYellow

// Button Tiket

.button-tiket
	background: cYellow
	c cBlackL
	height 40px
	padding 12px 16px
	&:hover
		background: cYellowL
		c cBlackL

.button-close
	c cBlackL
	height 40px
	padding 12px 16px
	background: cGrayL
	&:hover
		c cBlackL
		background: #ccc

label.button.attach-file
	fsSB(16px)
	line-height 44px
	c #161516
	
.button-filter--mobile
	width 100%
	margin-bottom 24px

.closed-mobile
	font-size: 1rem
	line-height: 2.5rem
	height 56px
	width 100%
	background: #8c8b8d
	color: #161516