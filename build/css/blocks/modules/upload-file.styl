.file-input-wrapper
	overflow-y hidden
	input
		display none

.upload-file
	position relative
	fsR(14px)
	border-radius: 6px
	border: 1px solid #313031
	background-color: #313031
	padding 10px 16px 12px 16px
	margin-top 16px
	&.is-message
		display inline-block
		background: cBlackD
		margin-top 0
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0.07)
	&:not(:first-child)
		margin-top 8px
	.upload-file--name
		display flex
		flex-direction row
		align-items center
		justify-content space-between
		&>div
			display flex
			flex-direction row
			align-items flex-end
		p
			fsR(14px)
			line-height normal !important
			padding-right 16px
		img
			margin-right 11px
	.delete-file
		height 14px
		position relative
		top 2px
		svg
			fill cGray
			trn(.25s)
			&:hover
				fill cWhite

.upload-message
	border-radius: 6px
	background-color: #161516
	margin-top 8px
	padding: 8px 16px
	p
		font-size 12px
		ffa(fR)
		ls(-0.09px)
		c cGray
		line-height 16px

.load-progress
	position relative
	height: 4px
	border-radius: 4px
	background-color: #161516
	margin-top 13px
	span
		position absolute
		top 0
		left 0
		display inline-block
		height: 4px
		border-radius: 4px
		background-color: #6f6e70