.account-menu
	max-width 234px
	li
		display block
		line-height 40px
		& > *
			vertical-align middle
			line-height normal
		&:not(:last-child)
			margin-bottom 18px
		a
			position relative
			display inline-block
			padding-left 32px
			fsSB(14px)
			c cGray
			text-decoration none
			trn(.25s)
			vertical-align middle
			line-height 18px
			&.is-active
				c cWhite
				&:before
					position absolute
					left 0
					top 50%
					margin-top -20px
					display block
					content ""
					width 4px
					height 40px
					background: cYellow
			&:hover
				c cWhite
	.account-menu--sub
		padding-top 8px
		li
			margin-bottom 8px
			padding-left 28px
			a
				&:before
					display none