.table-history
	width 100%
	max-width 624px
	border-collapse collapse
	text-align: left
	table-layout: fixed
	background: cBlackD
	brr(10px)
	thead
		border-bottom 1px solid #313031
		th
			height 54px
			padding 0 22px 0 22px
			&:not(:last-child)
				border-right 1px solid #313031
			c cGray
			font-size 12px
			ffa(fR)
			font-weight normal
	tbody
		tr
			&:not(:last-child)
				border-bottom 1px solid #313031
			td
				font-size 13px
				ffa(fR)
				ls(-0.09px)
				c cWhite
				min-height 54px
				line-height 20px
				padding 18px 20px 20px 24px
				vertical-align baseline
				&:not(:last-child)
					border-right 1px solid #313031
				a
					font-size 13px
					ffa(fSB)
					ls(-0.09px)
					c cWhite
					text-decoration none