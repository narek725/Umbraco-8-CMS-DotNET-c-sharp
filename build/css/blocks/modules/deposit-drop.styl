.add-new--payment
	position absolute
	top 100%
	left 50%
	tt(-50%, 0)
	max-width: 536px
	width: 100%
	box-shadow: 0 5px 30px rgba(0,0,0,.3)
	border-radius: 10px
	border: 1px solid #403f40
	background-color: #2f2d2f
	z-index: 10
	overflow hidden
	opacity 0
	visibility hidden
	trn(.25s)
	&.is-active
		top calc(100% - 32px)
		opacity 1
		visibility visible
	.add-payment--items
		display block
		position: relative
		padding 20px
		border-bottom: 1px solid #403f40
		trn(.25s)
		&:hover
			background: #403f40
		.arrow-default
			top: 34px
			right 34px
			transform rotateZ(-90deg)
	.add--payments-method
		display block
		height 56px
		line-height 56px
		c #8c8b8d
		letter-spacing: -0.1px
		text-align center
		font-size 14px
		ffa(fSB)
		svg
			position relative
			top 1px
			margin-right 13px
			fill cGrayL