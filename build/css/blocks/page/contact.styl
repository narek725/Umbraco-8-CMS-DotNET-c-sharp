.tiket-wrappe
	.tiket-main
		notB(30px)
		h6
			font-size 12px
			ffa(fSB)
			ls(-0.09px)
			c #545355
			text-transform uppercase
			margin-bottom 14px

.tiket-main--item
	position relative
	background cBlackD
	brr(6px)
	padding 28px 30px
	notB(8px)
	.tiket-item--head
		padding-bottom 28px
		border-bottom: 1px solid #313031
		.new-tiket
			position absolute
			top 8px
			right 9px
		.tiket-date
			font-size 12px
			ffa(fR)
			line-height 16px
			c cGray
			display block
			margin-bottom 7px
		.tiket-name
			font-size: 14px
			ffa(fR)
			letter-spacing: -0.1px
			line-height: 20px
			c cWhite
	
	.tiket-item--content
		display flex
		flex-direction row
		padding-top 30px
		
		.message-tiket
			flex-grow 1
			p
				fsR(12px)
				line-height 16px
				margin-bottom 3px
			.message-date
				font-size: 10px
				ffa(fR)
				letter-spacing: -0.07px
				line-height: 16px
				c cGray

.icon-user
	flex-basis 32px
	position relative
	width 32px
	min-width 32px
	height 32px
	min-height 32px
	overflow hidden
	brr(50%)
	margin-right 16px
	img
		position absolute
		imgC()
		width 100%
		height auto

// Ticket

.active-tiket
	
	.top-line--tiket
		display flex
		flex-direction row
		justify-content space-between
		margin-bottom 40px
	
	.black-main--head
		margin-bottom 44px

	.status-ticket--wrapper
		margin-bottom 18px
		.status-ticket
			display inline-block
			c cWhite
			font-size: 11px
			ffa(fSB)
			letter-spacing: -0.1px
			height: 24px
			padding 6px 12px
			border-radius: 6px
			background-color: #353435
		.status-ticket--date
			display inline-block
			font-size 12px
			ffa(fR)
			c cGray
			line-height 22px
			margin-left 16px

.reply-wrapper
	margin-bottom 24px
	.reply-names
		fsR(14px)
		margin-bottom 15px
	
	.reply-message--send
		border-radius: 6px
		background-color: #353435
		.reply-message__content
			padding 23px 32px 0
			textarea
				fsR(14px)
				line-height 22px
				margin-bottom 14px
				resize none
				height auto
				min-height 164px
				width 100%
				background-color: #353435
			&>p
				fsR(14px)
				line-height 22px
				margin-bottom 14px

.reply-form--send
	margin-top 24px
	border-top: 1px solid #1d1c1d
	display flex
	.button-reply
		width 100px
		height 56px
		fsSB(14px)
		c cWhite
		border-right: 1px solid #1d1c1d
		trn(.25s)
		&:hover
			c cYellow
	.upload-file--form
		width 100%
		label
			fsSB(14px)
			width 100%
			height 100%
			line-height 54px
			text-align center
			position relative
			display block
			cursor pointer
			c cGray
			trn(.25s)
			svg
				fill cGray
				margin-right 8px
				trn(.25s)
			&:hover
				c cWhite
				svg
					fill cWhite

.new-ticket--fixed
	position fixed
	width 100%
	bottom 24px
	left 0
	padding 0 24px
	display none

// Chat

.tickets-chat
	position relative
	border-radius: 6px
	background-color: #242324
	notB(8px)
	padding 24px 32px 28px
	.new-tiket
		position absolute
		top 8px
		right 9px

.tickets-chat--head
	display flex
	flex-direction row
	padding-bottom 22px
	border-bottom: 1px solid #313031
	.message-tiket
		p
			color: #ffffff
			ffa(fSB)
			font-size: 12px
			letter-spacing: -0.09px
			line-height: 16px
		.message-date
			ffa(fR)
			font-size: 10px
			c cGray
			letter-spacing: -0.07px
			line-height: 16px

.tickets-chat--message
	padding-top 22px
	p
		fsR(14px)
		c cGray
		line-height 22px
		
.file-message
	margin-top 18px
	.file-load
		display inline-flex
		flex-direction row
		align-items center
		width auto
		height 40px
		padding 8px 16px
		brr(6px)
		cursor pointer
		background: cBlackD
		border: 1px solid #313031
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0.07)
		trn(.25s)
		margin-right 8px
		&:hover
			background: #313031
		img
			margin-right 12px
		p
			fsR(14px)