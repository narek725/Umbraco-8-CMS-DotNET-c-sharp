.section_start-using
	position relative
	min-height 380px
	background rgb(49,88,211)
	background -moz-linear-gradient(top, rgba(49,88,211,1) 0%, rgba(80,119,241,1) 100%)
	background -webkit-linear-gradient(top, rgba(49,88,211,1) 0%,rgba(80,119,241,1) 100%)
	background linear-gradient(to bottom, rgba(49,88,211,1) 0%,rgba(80,119,241,1) 100%)
	&:before
		position absolute
		left 0
		top 0
		display block
		content ''
		width 100%
		height 100%
		background-image: url(../img/circle-big.png)
		background-repeat no-repeat
		background-position: center
		@media screen and (max-width: 768px)
			background-size cover
	.container
		position relative
.start-using
	padding-top 90px
	padding-bottom 70px
	text-align center
	c cWhite
	h4
		font-size 48px
		line-height 58px
		font-family: fPoppinsSemiBold
		margin-bottom 35px
		@media screen and (max-width: 600px)
			font-size 32px
			line-height 40px
			margin-bottom 10px
		@media screen and (max-width: 414px)
			max-width 350px
			margin 0 auto 10px
	p
		font-size 18px
		line-height 24px
		font-family: fPoppinsMedium
		margin-bottom 38px
		@media screen and (max-width: 600px)
			font-size 14px
			margin-bottom 34px
		@media screen and (max-width: 480px)
			br
				display none